<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Teacher</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Create Subject</h1>
        <form id="createSubjectForm" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="SubjectName" class="form-label">Subject Name</label>
                <input type="text" class="form-control" id="SubjectName" name="SubjectName" required />
                <div class="invalid-feedback">
                    Please provide a valid subject name.
                </div>
            </div>
            <div class="mb-3">
                <select id="TeacherId" class="form-control">
                    <option value="">Select a Teacher</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Create Subject</button>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            $.ajax({
                url: 'http://localhost:5000/api/ManageTeacher/GetAllTeachers', // Replace with your API endpoint
                type: 'GET',
                success: function (data) {
                    var select = $('#TeacherId');
                    // Loop through the data and create an option for each teacher
                    $.each(data, function (index, teacher) {
                        select.append('<option value="' + teacher.teacherId + '">' + teacher.teacherName + '</option>');
                    });
                },
                error: function (error) {
                    console.error("Error fetching teachers:", error);
                }
            });
            // Bootstrap form validation
            (function () {
                'use strict';
                var forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms).forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            })();

            $('#createSubjectForm').on('submit', function (event) {
                event.preventDefault(); // Prevent the default form submission

                var formData = {
                    SubjectName: $('#SubjectName').val(),
                    TeacherId: $('#TeacherId').val()

                };

                $.ajax({
                    url: 'http://localhost:5000/api/ManageSubject/CreateSubject',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (response) {
                        alert('Subject created successfully!');
                        // Optionally, redirect or clear the form
                        $('#createSubjectForm')[0].reset();
                        $('.was-validated').removeClass('was-validated'); // Reset Bootstrap validation
                        window.location.href = '/ManageSubject/Index';
                    },
                    error: function (xhr, status, error) {
                        alert('Error creating subject: ' + xhr.responseText);
                    }
                });
            });
        });
    </script>
</body>
</html>
