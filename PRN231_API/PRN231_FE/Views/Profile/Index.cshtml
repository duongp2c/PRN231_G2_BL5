@model ProfileDTO
@{
}
<body>
    <div class="row">
        
        <h1> Thông tin học sinh</h1>
        <div class="col-md-4">
            <label>Ảnh Cá Nhân</label></br>
            <div class="d-flex justify-content-center pt-5">

                <img src=@Model.image alt="no image" style="width:200px;height:200px;" onerror="this.src='https://static.vecteezy.com/system/resources/thumbnails/009/292/244/small/default-avatar-icon-of-social-media-user-vector.jpg'">
            </div>
            <div class="pt-5">
                <div>
                    <div class="card">
                        <div class="card-body">
                            <a href="/Home/Index" class="btn btn-primary w-100">Quay về trang chính</a>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="card">
                        <div class="card-body">
                            @if (@ViewBag.AccountId == null)
                            {
                                <a href="/Account/Login" class="btn btn-primary w-100">Đăng Nhập</a>
                            }
                            else
                            {
                                <a href="/Account/Logout" class="btn btn-primary w-100">Đăng xuất</a>
                            }

                        </div>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="col-md-8">
            <form asp-action="Index" method="post">
                <div class="form-group">
                    <label>Tên</label>
                    <input asp-for="name" type="text" id='name' name="name" value="@Model.name" placeholder="name" class="form-control">
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                </br>
                <div class="form-group">
                    <label>Tuổi</label>
                    <input asp-for="age" type="number" id='age' name="age" value="@Model.age" placeholder="age" class="form-control">
                    <span asp-validation-for="age" class="text-danger"></span>
                </div>
                </br>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" id='address' name="address" value="@Model.address" placeholder="address" class="form-control">
                </div>
                </br>
                <div class="form-group">
                    <label>Thông tin thêm</label>
                    <input type="text" id='additionalInfo' name="additionalInfo" value="@Model.additionalInfo" placeholder="additionalInfo" class="form-control">
                </div>
                </br>
                <div class="form-group">
                    <label>Số Điện Thoại</label>
                    <input asp-for="phone" type="text" id='phone' name="phone" value="@Model.phone" placeholder="phone" class="form-control">
                    <span asp-validation-for="phone" class="text-danger"></span>
                </div>
                </br>
                <div class="form-group">
                    <label>Ảnh cá nhân</label>
                    <input type="text" id='image' name="image" value="@Model.image" placeholder="image" class="form-control">
                </div>
                </br>
                <button type="submit" class="btn btn-primary">Update</button>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mt-3">
                        @TempData["SuccessMessage"]
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger mt-3">
                        @TempData["ErrorMessage"]
                    </div>
                }
            </form>
        </div>
    </div>
</body>
<style>
    .field-validation-error {
        color: red
    }

    .validation-summary-errors {
        color: red
    }
</style>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">
</script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js">
</script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js">
</script>
