@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var subjects = ViewData["sList"] as List<SubjectDTO>;
}
<body>
    <div class="row">
        <h1>Môn học</h1>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID môn học</th>
                    <th>Tên Môn Học </th>
                    <th>Xem Điểm</th>
                </tr>
            </thead>
            <tbody>
                @foreach (SubjectDTO s in subjects)
                {
                    <tr>
                        <td>@s.subjectId</td>
                        <td>@s.name</td>
                        <td>
                            <div>
                                <a asp-controller="StudentGrade" asp-action="CheckGrade" asp-route-id="@s.subjectId" title="Edit">Xem Điểm</a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</body>
<style>
    .table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .table th {
            background: linear-gradient(to right, #007bff, #00d2ff); /* Gradient background for header */
            color: #ffffff; /* White text color for header */
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background: #f9f9f9; /* Solid background for odd rows */
    }

    .table-striped tbody tr:nth-of-type(even) {
        background: #ffffff; /* Solid background for even rows */
    }

    .table-striped tbody tr:hover {
        background: #e0e0e0; /* Light gray background for hover effect */
    }

    .btn {
        text-decoration: none;
        color: #fff;
        background-color: #007bff;
        border: 1px solid #007bff;
        border-radius: 4px;
        padding: 6px 12px;
        display: inline-block;
        font-size: 14px;
        text-align: center;
    }
</style>
