@model LoginViewModel




<div class="container">
   
    <form style="width: 50%;
    margin: auto;
    padding-top: 200px;" asp-action="Login" method="post">
        <h2 style="font-weight: 900;" class="text-center">Login</h2>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <div class="text-center">
                <a href="/ForgotPassword/Index">ForgotPass</a>
            </div>
            
            <div class="d-flex " style="justify-content: space-around;">
                <a asp-controller="Account" asp-action="Register" class="btn btn-secondary">Register</a>
                <button type="submit" class="btn btn-primary">Login</button>
           </div>
        </div>
    </form>
</div>
