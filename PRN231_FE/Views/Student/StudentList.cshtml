@model IEnumerable<PRN231_API.DTO.StudentDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Students List";
}

<h1>Students List</h1>

<!-- Form for entering Subject ID -->
<form method="get" action="/Student/StudentList">
    <div class="form-group">
        <label for="subjectIdInput">Enter Subject ID:</label>
        <input type="number" id="subjectIdInput" name="subjectId" class="form-control" placeholder="Enter Subject ID" required />
    </div>
    <button type="submit" class="btn btn-primary">Check Students</button>
</form>

@if (Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>SubjectID</th>
                <th>Subject</th>
                <th>Student Name</th>
                <th>Age</th>
                <th>Regular Student</th>
                <th>Teacher</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.SubjectId</td>
                    <td><strong>@student.SubjectName</strong></td>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@(student.IsRegularStudent ? "Yes" : "No")</td>
                    <td>@student.TeacherName</td>
                    <td>
                        <a asp-action="StudentEvaluations"
                           asp-route-studentId="@student.StudentId"
                           asp-route-subjectId="@student.SubjectId"
                           class="btn btn-primary">View Evaluations</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<style>
    .table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .table th {
            background: linear-gradient(to right, #007bff, #00d2ff); /* Gradient background for header */
            color: #ffffff; /* White text color for header */
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background: #f9f9f9; /* Solid background for odd rows */
    }

    .table-striped tbody tr:nth-of-type(even) {
        background: #ffffff; /* Solid background for even rows */
    }

    .table-striped tbody tr:hover {
        background: #e0e0e0; /* Light gray background for hover effect */
    }

    .btn {
        text-decoration: none;
        color: #fff;
        background-color: #007bff;
        border: 1px solid #007bff;
        border-radius: 4px;
        padding: 6px 12px;
        display: inline-block;
        font-size: 14px;
        text-align: center;
    }
</style>
